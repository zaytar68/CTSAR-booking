@code {
    // ================================================================
    // PARAMÃˆTRES DU DIALOGUE
    // ================================================================

    [CascadingParameter]
    public MudBlazor.IDialogReference? DialogRef { get; set; }

    // ================================================================
    // VARIABLES D'Ã‰TAT
    // ================================================================

    /// <summary>
    /// RÃ©fÃ©rence au formulaire MudForm.
