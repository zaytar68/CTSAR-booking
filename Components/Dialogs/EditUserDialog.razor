                    <MudTextField @bind-Value="_model.Prenom"
                                  Label="Pr√©nom"
                                  Variant="Variant.Outlined"
                                  Required="true"
                                  RequiredError="Le pr√©nom est obligatoire"
                                  MaxLength="100"
                                  Counter="100"
                                  Immediate="true"
                                  HelperText="Pr√©nom de l'utilisateur" />
                </MudItem>

                @* Nom *@
                <MudItem xs="12" sm="6">
                    <MudTextField @bind-Value="_model.Nom"
                                  Label="Nom"
