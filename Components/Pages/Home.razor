@*
====================================================================
Home.razor : Page d'accueil de l'application
====================================================================
*@

@page "/"
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<CTSAR.Booking.Resources.Pages.Home> Loc
@inject IStringLocalizer<CTSAR.Booking.Resources.Shared> SharedLoc

<PageTitle>@Loc["Title"]</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4">@Loc["WelcomeTitle"]</h1>
            <p class="lead">@Loc["WelcomeSubtitle"]</p>
            <hr class="my-4" />
        </div>
    </div>

    <AuthorizeView>
        <Authorized>
            @* Message pour utilisateur connecté *@
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="alert alert-success" role="alert">
                        <h4 class="alert-heading">@string.Format(Loc["HelloUser"], context.User.Identity?.Name)</h4>
                        <p>@Loc["YouAreLoggedIn"]</p>
                        <hr>
                        <p class="mb-0">
                            <a href="mon-profil" class="alert-link">@Loc["ManageAccount"]</a>
                        </p>
                    </div>
                </div>
            </div>

            @* TODO: Afficher les prochaines réservations de l'utilisateur *@
        </Authorized>

        <NotAuthorized>
            @* Message pour visiteur non connecté *@
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="alert alert-info" role="alert">
                        <h4 class="alert-heading">@Loc["NotLoggedIn"]</h4>
                        <p>@Loc["LoginToAccess"]</p>
                        <hr>
                        <p class="mb-0">
                            <a href="Account/Login" class="btn btn-primary me-2">@SharedLoc["Login"]</a>
                            <a href="Account/Register" class="btn btn-outline-primary">@SharedLoc["Register"]</a>
                        </p>
                    </div>
                </div>
            </div>
        </NotAuthorized>
    </AuthorizeView>

    @* Section informations *@
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-calendar-check"></i> @Loc["ReservationsTitle"]
                    </h5>
                    <p class="card-text">
                        @Loc["ReservationsDesc"]
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-people"></i> @Loc["MonitorsTitle"]
                    </h5>
                    <p class="card-text">
                        @Loc["MonitorsDesc"]
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-bell"></i> @Loc["NotificationsTitle"]
                    </h5>
                    <p class="card-text">
                        @Loc["NotificationsDesc"]
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
