@page "/forgot-password"

@using Microsoft.Extensions.Localization

@inject IStringLocalizer<CTSAR.Booking.Resources.Auth> Loc
@inject NavigationManager Navigation

<PageTitle>@Loc["ForgotPasswordTitle"]</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-8">
    <MudPaper Elevation="3" Class="pa-6">
        <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">
            @Loc["ForgotPasswordTitle"]
        </MudText>
        <MudText Typo="Typo.body1" Align="Align.Center" Class="mb-6">
            @Loc["ForgotPasswordSubtitle"]
        </MudText>

        <MudAlert Severity="Severity.Info" Class="mb-4">
            @Loc["ForgotPasswordNotImplemented"]
        </MudAlert>

        <MudText Typo="Typo.body2" Class="mb-4">
            @Loc["ContactAdminMessage"]
        </MudText>

        <MudDivider Class="my-6" />

        <MudStack Row="true" Justify="Justify.Center">
            <MudButton Variant="Variant.Outlined"
                       Color="Color.Primary"
                       Href="/login"
                       StartIcon="@Icons.Material.Filled.ArrowBack">
                @Loc["BackToLogin"]
            </MudButton>
        </MudStack>
    </MudPaper>
</MudContainer>

