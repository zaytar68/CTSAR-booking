@page "/login"

@using Microsoft.Extensions.Localization
@using CTSAR.Booking.Services

@inject IStringLocalizerFactory LocalizerFactory
@inject NavigationManager Navigation

<PageTitle>@Loc["LoginTitle"]</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-8">
    <MudPaper Elevation="3" Class="pa-6">
        <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">
            @Loc["LoginTitle"]
        </MudText>
        <MudText Typo="Typo.body1" Align="Align.Center" Class="mb-6">
            @Loc["LoginSubtitle"]
        </MudText>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <MudAlert Severity="Severity.Error" Class="mb-4">
                @errorMessage
            </MudAlert>
        }

        <form method="post" action="/api/auth/login-page">
            <MudTextField @bind-Value="email"
                          Label="@Loc["Email"]"
                          Variant="Variant.Outlined"
                          InputType="InputType.Email"
                          Required="true"
                          Class="mb-4"
                          name="email" />

            <MudTextField @bind-Value="password"
                          Label="@Loc["Password"]"
                          Variant="Variant.Outlined"
                          InputType="InputType.Password"
                          Required="true"
                          Class="mb-4"
                          name="password" />

            <div class="d-flex align-center mb-4" style="gap: 8px;">
                <input type="checkbox"
                       name="rememberMe"
                       value="true"
                       id="rememberMe"
                       style="width: 18px; height: 18px; cursor: pointer; accent-color: var(--mud-palette-primary);" />
                <label for="rememberMe" style="cursor: pointer; user-select: none;">
                    @Loc["RememberMe"]
                </label>
            </div>

            <input type="hidden" name="returnUrl" value="@ReturnUrl" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       Size="Size.Large"
                       FullWidth="true"
                       ButtonType="ButtonType.Submit">
                @Loc["LoginButton"]
            </MudButton>
        </form>

        <MudDivider Class="my-6" />

        <MudStack Row="true" Justify="Justify.SpaceBetween">
            <MudLink Href="/register">@Loc["CreateAccount"]</MudLink>
            <MudLink Href="/forgot-password">@Loc["ForgotPassword"]</MudLink>
        </MudStack>
    </MudPaper>
</MudContainer>

@code {
    private string email = "";
    private string password = "";
    private string? errorMessage;

    private IStringLocalizer? _loc;
    private IStringLocalizer Loc => _loc ??= LocalizerFactory.Create("Auth", "CTSAR.Booking");

    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }

    [SupplyParameterFromQuery(Name = "error")]
    private string? Error { get; set; }

    protected override void OnInitialized()
    {
        if (!string.IsNullOrEmpty(Error))
        {
            errorMessage = Error == "invalid" ? Loc["LoginError"] : Loc["UnexpectedError"];
        }
    }
}
